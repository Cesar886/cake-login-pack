{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.8.0"
    }
  },
  "routes": [
    {
      "src": "/(css|js|img|font)/(.*)",
      "dest": "/app/webroot/$1/$2"
    },
    {
      "src": "/favicon.ico",
      "dest": "/app/webroot/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_NAME": "CakeLogin",
    "DEBUG": "true",
    "APP_ENCODING": "UTF-8",
    "APP_DEFAULT_LOCALE": "es_ES",
    "APP_DEFAULT_TIMEZONE": "UTC",
    "SECURITY_SALT": "your-security-salt-here-change-this-in-production"
  },
  "build": {
    "env": {
      "APP_ENV": "production"
    }
  }
}